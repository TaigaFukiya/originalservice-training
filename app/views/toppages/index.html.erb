<% if logged_in? %>
<div class="row">
    <aside class="col-md-4">
      <%= form_for(@menu) do |f| %>
        <div class="form-group">
          <%= f.text_area :content, class: 'form-control', rows: 5 %>
        </div>
        <%= f.submit 'メニューの追加', class: 'btn btn-default btn-block' %>
      <% end %>
    </aside>
    <div class="col-xs-8">
     
    </div>
  </div>
<% else %>
<div class="center jumbotron">
    <div class="text-center">
        <h1>筋トレをはじめよう！</h1>
        <%= link_to 'トレーニング開始', signup_path, class: "btn btn-default glyphicon glyphicon-heart" %>
    </div>
</div>
    <div class="text-right">
        <h5>すでに登録されている方は<%= link_to 'こちら', login_path %></h5>
    </div>
<% end %>

