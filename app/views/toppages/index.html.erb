<% if logged_in? %>
<h2>今月の目標</h2>
    <h3><%= current_user.target %></h3>

 <div class="row">
    <h2>本日のメニュー登録フォーム</h2>
    <div class="col-md-6">
    　<%= form_for(@menu) do |f| %>
        <div class="form-group">
             <%= f.text_area :content, class: 'form-control', rows: 5 %>
        </div>
        <%= f.submit 'メニューの追加', class: 'btn btn-default btn-block' %>
      <% end %>
    <div class="col-md-6">
　　　<h2>本日のメニュー</h2>
        <%= render "menus/menus", menus: @menus do %>
           <% menu.content.created_today %>
        <% end %>
    </div>
  </div>
    
  </div>
<% else %>
<div class="center jumbotron">
    <div class="text-center">
        <h1>筋トレをはじめよう！</h1>
        <%= link_to 'トレーニング開始', signup_path, class: "btn btn-default glyphicon glyphicon-heart" %>
    </div>
</div>
    <div class="text-right">
        <h5>すでに登録されている方は<%= link_to 'こちら', login_path %></h5>
    </div>
<% end %>

