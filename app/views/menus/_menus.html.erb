<ul class="media-list">
  <% menus.each do |menu| %>
    <li class="media">
      <div class="media-body">
        <div>
           <span class="text-muted">日時： <%= simple_time(menu.created_at) %></span>
        </div>
        <div>
          <p><%= menu.content %></p>
        </div>
        <div>
          <% if current_user == menu.user %>
            <%= link_to "Done", menu, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate menus %>
</ul>