<ul class="media-list">
  <% manus.each do |menu| %>
    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(menu.user, { size: 50 }) %>" alt="">
      </div>
      <div class="media-body">
        <div>
          <%= link_to menu.user.name, user_path(menu.user) %> <span class="text-muted">posted at <%= menu.created_at %></span>
        </div>
        <div>
          <p><%= menu.content %></p>
        </div>
        <div>
          <% if current_user == menu.user %>
            <%= link_to "Delete", menu, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate menus %>
</ul>